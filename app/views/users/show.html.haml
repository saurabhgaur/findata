%p
  %h1
    Welcome, #{@user.name} 
  %h4
    #{@user.email if @user.email}
%p
.FamilyList
  %h3 
    Family Members(#{@user.family_members.count}) 
    .btn.btn-primary.btn-small.pull-right{:'data-toggle'=>'collapse', :'data-target'=>'#AddFamilyMember'}
      Add Family Members
  %p
  #AddFamilyMember.collapse.pull-right
    =render 'shared/family_member_form'

  %table.table.table-striped.table-bordered.table-condensed
    %tr
      %th ID
      %th Name
      %th Email
      %th Actions
    %tr
      =render @user.family_members 


.InvestmentsList
  %h3 
    Investments(#{@user.investments.count})
    .btn.btn-primary.btn-small.pull-right{:'data-toggle'=>'collapse', :'data-target'=>'#AddInvestment'}
      Add Investments
    %p
    #AddInvestment.collapse.pull-right
      =render 'shared/investment_form'
  %p
  %table.table.table-striped.table-bordered.table-condensed
    %tr
      %th ID
      %th Institution Name
      %th Account Number
      %th First Owner
      %th Second Owner
      %th Nominee
      %th Notes
      %th Actions
    %tr
      =render @user.investments 



.AddressesList
  %h3 
    Addresses(#{@user.addresses.count})
    .btn.btn-primary.btn-small.pull-right{:'data-toggle'=>'collapse', :'data-target'=>'#AddAddress'}
      Add Address
  %p
  #AddAddress.collapse.pull-right
    =render 'shared/address_form'  
  %p
  %table.table.table-striped.table-bordered.table-condensed
    %tr
      %th ID
      %th First Line
      %th Second Line
      %th City
      %th State
      %th Country
      %th Pin
      %th Actions
    %tr
      =render @user.addresses 

